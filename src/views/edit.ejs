<%- include ('partials/_header'); %>

<!-- FORM -->
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit exp</h1>

        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= exp._id %>" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" name="concepto" placeholder="concepto" value="<%= exp.text %>" class="form-control">
                        </div>
                        <div class="form-group mb-3">
                            <input name="amount" cols="80" class="form-control" placeholder="Cantidad"><%= exp.amount %></input>
                        </div>
                        <div class="d-grid gap-1">
                            <a href="/" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer'); %>